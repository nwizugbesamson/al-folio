<a
  href="{{ include.href | default: '#' }}"
  class="py-2.5 px-4 text-center rounded-lg border
    {% if include.svg %}
      flex items-center
    {% endif %}
    {% if include.dark %}
      bg-gray-700 text-white hover:bg-gray-200 hover: text-gray-700
    {% else %}
      hover:bg-gray-700 hover:text-white text-gray-700 bg-gray-100
    {% endif %}"
>
  {{ include.label }}
  
  {% if include.svg %}
    
    {% assign svg_path = 'svg/' | append: include.svg | append: '.liquid' %}
    {% include {{svg_path}} class='ml-2' %}
    
  {% endif %}
</a>
